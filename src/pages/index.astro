---
import "@/assets/global.css";
import BuildBadge from "@/components/BuildBadge";
import Default from "@/layouts/Default.astro";
---

<Default>
  <section class="mx-auto max-w-screen-md min-h-screen">
    <header class="pt-8">
      <div class="flex justify-between">
        <h1
          class="font-extrabold tracking-tight text-5xl leading-[normal] bg-clip-text text-transparent bg-gradient-to-r from-pink-500 to-violet-500"
        >
          Skill Badges
        </h1>
        <div class="self-end">
          <div class="flex flex-col items-end gap-1">
            <span>
              <img
                alt="GitHub Repo stars"
                src="https://img.shields.io/github/stars/Liumingxun/profile-skill-badges?style=flat-square&color=66ccff"
              />
            </span>
            <a
              href="https://github.com/Liumingxun/profile-skill-badges"
              target="_blank"
            >
              <img
                alt="Static Badge"
                src="https://img.shields.io/badge/Find_me_on-GitHub-66ccff?style=flat-square"
              />
            </a>
          </div>
        </div>
      </div>
      <p class="mt-6 text-lg text-gray-600">
        Easily create and customize skill badges for your profiles. Export in
        Markdown or HTML, and integrate them into websites, GitHub, and more.
      </p>
    </header>
    <div class="ds-divider"></div>
    <BuildBadge client:only="solid-js" />
    <div class="flex justify-between pt-4">
      <span>
        Powered by <a
          class="ds-link"
          href="//shields.io"
          target="_blank"
          rel="noopener noreferrer"
        >
          shields.io
        </a> and <a
          class="ds-link"
          href="//github.com/gilbarbara/logos"
          target="_blank"
          rel="noopener noreferrer"
        >
          gilbarbara's logos
        </a>.
      </span>
      <span>
        Hosted on <a
          href="http://cloudflare.com"
          target="_blank"
          rel="noopener noreferrer"
        >
          <img
            class="inline-block"
            src="https://img.shields.io/badge/Cloudflare-eff1f5.svg?style=flat-square&logo=data:image/svg+xml;base64,"
            alt="Cloudflare Icon"
          />
        </a>
      </span>
    </div>
  </section>
</Default>
